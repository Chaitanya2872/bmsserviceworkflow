{
  "compilerOptions": {
    "target": "ES2020",                    // Modern JS output
    "module": "CommonJS",                  // Node.js module system
    "lib": ["ES2020"],                     // Include modern JS features
    "outDir": "dist",                      // Where compiled JS files go
    "rootDir": "src",                      // Where TS files live
    "esModuleInterop": true,               // Enables `import express from 'express'`
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // Enables all strict type-checking
    "moduleResolution": "node",            // Node.js module resolution
    "resolveJsonModule": true,             // Allows importing .json files
    "skipLibCheck": true                   // Skip type-checking for libraries
  },
  "include": ["src"],                      // Only compile files in the src folder
  "exclude": ["node_modules", "dist"]      // Ignore these folders
}
